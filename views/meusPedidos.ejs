<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TopSales6</title>
    <link rel="shortcut icon" href="/images/fivicon.ico">
    <!--Fonte / Icons-->    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>   
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined" rel="stylesheet">     
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Round" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Sharp" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Two+Tone" rel="stylesheet">    
    <!--CSS-->
    <link rel="stylesheet" href="/stylesheets/base.css">
    <link rel="stylesheet" href="/stylesheets/base-area-restrita.css">
    <link rel="stylesheet" href="/stylesheets/meus-pedidos.css">
    
</head>
<body>    

    <%- include('./partials/header') %>

    <main>
        <div class="container">
            <div class="div-main-config-padrao">
                <!--Comece aqui!-->
                <div class="div-area-restrita">

                    <%- include('./partials/menu-lateral-perfil') %>
                    
                    <div class="div-info-usuario-principal">
                        <p class="titulo-meus-pedidos">
                            <span class="material-icons-outlined">assignment</span>
                            MEUS PEDIDOS
                        </p> 

                        <% if(pedidos && pedidos != ""){ %>

                            <table class="tabela-pedido">
                                <thead>
                                    <tr>
                                        <th>PEDIDO</th>                                    
                                        <th>DATA</th>
                                        <th>MÉTODO</th>
                                        <th>TOTAL</th>
                                        <th>STATUS</th>
                                    </tr>
                                </thead>

                                <tbody>                                

                                    <% for(let i = 0; i < pedidos.length; i++) { %> 

                                        <tr>
                                            <td># <%= pedidos[i].id %> </td>                                                                              
                                            <td><%= datashoras[i] %></td>                                                                              
                                            <td><%= pedidos[i].metodo_pagamento %></td>                                                                              
                                            <td><%= pedidos[i].preco_total.toLocaleString('pt-br',{style: 'currency', currency: 'BRL'}) %></td>
                                            <td> 
                                                <span style="background-color: #9a6700;color: #fff; font-size: 0.7rem;padding: 3px;border-radius: 4px;"> 
                                                    <%= pedidos[i].status %>
                                                </span>
                                            </td>  
                                        </tr> 
                                    
                                    <% } %> 

                                </tbody>
                            </table>

                        <% } else { %>

                            <div class="div-sem-pedidos">
                                <p class="titulo-meus-pedidos">NÃO ENCONTRAMOS NENHUM PEDIDO EM SUA CONTA...</p>
                                <a href="/" class="btn-pag-meus-pedidos-ir-as-compras">
                                    <span id="img-carrinho" class="material-icons-outlined img-carrinho-2">shopping_cart</span>
                                    IR AS COMPRAS
                                </a>
                            </div>

                        <% } %> 
                    </div>
                </div>
                
            </div>
        </div>
    </main>

    <%- //include('./partials/footer') %>

</body>
</html>