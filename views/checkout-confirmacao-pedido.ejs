<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TopSales6</title>
    <link rel="shortcut icon" href="/images/fivicon.ico">
    <!--Fonte / Icons-->    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>   
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined" rel="stylesheet">     
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Round" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Sharp" rel="stylesheet">    
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons+Two+Tone" rel="stylesheet">    
    <!--CSS-->
    <link rel="stylesheet" href="/stylesheets/base.css">       
    <link rel="stylesheet" href="/stylesheets/barra-progresso-pedido.css">
    <link rel="stylesheet" href="/stylesheets/checkout.css">    
    <link rel="stylesheet" href="/stylesheets/checkout-confirmacao-pedido.css">    
</head>
<body>   
    <%- include('./partials/header') %>
    
    <div class="container">
        <div class="div-main-config-padrao">
            <!--Comece aqui!-->
            <%- include('./partials/barra-progresso-pedido') %>

            <main class="main-checkout">
                <div class="div-checkout-info">                    
                    <div class="div-info-confirmacao">
                        <h2>
                            <span class="material-icons-outlined">task</span>
                            Revisão do Pedido
                        </h2>
                        
                        <div href="#" class="div-conteudo-confirmacao">
                            <div class="div-meus-dados">
                                <h3>
                                    <span class="material-icons-outlined">person</span>
                                    Meus Dados
                                </h3>
                                <p> <%= meusDados.nome + ' ' + meusDados.sobrenome %></p>
                                <p> <%= meusDados.email %></p>
                                <p>CPF: <%= meusDados.cpf %> </p>
                            </div>
                                                        
                            <div class="div-entrega">
                                <h3>
                                    <span class="material-icons-outlined">local_shipping</span>
                                    Entrega
                                </h3>
                                <p>Destinatário: <b> <%= endereco.destinatario %> </b></p>
                                <p> <%= endereco.rua %> , <%= endereco.bairro %>, <%= endereco.numero %>, <%= endereco.complemento %></p>
                                <p>CEP: <%= endereco.cep %> - <%= endereco.cidade %> / <%= endereco.estado %></p>
                            </div>

                            <div class="div-pagamento">
                                <h3>
                                    <span class="material-icons-outlined">credit_card</span>
                                    Pagamento
                                </h3>
                                <p>BOLETO BANCÁRIO</p>                                    
                            </div>
                        </div>

                        <% for(produto of produtos){ %>
                            <div href="#" class="div-conteudo-confirmacao">
                            <h3>
                                <span class="material-icons-outlined">shopping_bag</span>
                                Produto
                            </h3>

                            <div class="div-info-produto">
                                <div class="img-produto">
                                    <img src="/images/produtos/<%= produto.img%> " alt="">
                                    <p>
                                        <%= produto.nome%>  <br>
                                        <%= produto.produto_categoria.nome %>, <%= produto.produto_marca.nome%><br>
                                        <%= produto.modelo%>
                                    </p>
                                </div>

                                <div class="div-qt-produto">
                                    <p class="p-titulos">QT</p>
                                    <p> <%= produto.qt %> </p>
                                </div>
                                
                                <div class="div-preco-produto">
                                    <p class="p-titulos">Preço</p>
                                    <p> <%=produto.preco.toLocaleString('pt-br',{style: 'currency', currency: 'BRL'})%> </p>
                                </div> 
                            </div>
                            </div>
                        <% } %>
                    </div>        

                    <div class="div-botoes-continuar-voltar">
                        <a href="/checkout/checkout-pagamento" class="btn-voltar-progresso">
                            <span class="material-icons-outlined">keyboard_backspace</span>
                            VOLTAR AO PAGAMENTO
                        </a>                        
                    </div>            
                </div>
    
                <%- include('./partials/resumo-valores-carrinho') %>
                
            </main>
        </div>
    </div>

    <%-include('./partials/footer')%>
</body>
</html>